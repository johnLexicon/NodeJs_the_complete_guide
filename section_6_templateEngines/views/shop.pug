extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/shop.css")

block content 
    main.container 
        h3 Products 
        if products.length > 0
            .grid 
                each product in products 
                    article.card 
                        header.card-header 
                            h5 #{product.title} 
                        .card-content 
                            p #{product.content}
        else 
            p No Products Available